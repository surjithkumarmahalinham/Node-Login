<%- include('header'); %>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login</h2>
      <span>Login in to Your account</span>
    </div>
    <% if(locals.logout){ %>
      <div class="alert alert-success text-center">
        <%= logout %>
      </div>
    <% } %>
    <form method="post" action="/route/login" class="pt-3">
      <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="hello@gmail.com">
        <small class="form-text text-muted text-left">Registered email address</small>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="password">
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
</div>



<%- include('footer'); %>

</body>
</html>